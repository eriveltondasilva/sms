{
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "semi": false,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",

    "overrides": [
      {
        "files": ".prettierrc",
        "options": {
          "parser": "json"
        }
      }
    ],

    "tailwindFunctions": ["tw", "twJoin", "twMerge"],
    "plugins": ["prettier-plugin-tailwindcss"]
  }
