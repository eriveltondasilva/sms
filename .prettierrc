{
  "arrowParens": "always",
  "bracketSameLine": true,
  "jsxSingleQuote": true,
  "printWidth": 80,
  "semi": false,
  "singleAttributePerLine": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "useTabs": false,

  "overrides": [
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json"
      }
    }
  ],

  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindAttributes": ["theme"],
  "tailwindFunctions": ["tw", "twJoin", "twMerge"]
}
